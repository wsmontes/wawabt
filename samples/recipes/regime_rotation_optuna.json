  ],
  "metadata": {
    "penalty_value": 100000,
    "min_closed_trades": 20,
    "target_sharpe": 1.25,
    "train_range": ["2023-01-01", "2024-06-30"],
    "test_range": ["2024-07-01", "2025-11-14"],
