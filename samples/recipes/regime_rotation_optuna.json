    {"name": "atr_stop_multiple", "kind": "float", "low": 1.5, "high": 3.0},
    {"name": "take_profit", "kind": "float", "low": 0.08, "high": 0.18},
    {"name": "trend_weight", "kind": "float", "low": 0.9, "high": 1.4},
    {"name": "momentum_weight", "kind": "float", "low": 0.6, "high": 1.0},
    {"name": "volatility_weight", "kind": "float", "low": 0.2, "high": 0.6},
