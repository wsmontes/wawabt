{
  "name": "regime_rotation_optuna",
  "strategy_module": "strategies.regime_adaptive_rotation",
  "strategy_class": "RegimeAdaptiveRotationStrategy",
  "symbols": ["AAPL", "MSFT", "GOOGL", "AMZN", "META", "NVDA", "TSLA", "JPM"],
  "fromdate": "2023-01-01",
  "todate": "2025-11-14",
  "source": "yahoo_finance",
  "interval": "1d",
  "cash": 150000,
  "commission_preset": "us_stocks_zero",
  "analyzer_preset": "minimal",
  "metric": "sharpe",
  "maximize": true,
  "fixed_params": {
    "printlog": false,
    "warmup": 220
